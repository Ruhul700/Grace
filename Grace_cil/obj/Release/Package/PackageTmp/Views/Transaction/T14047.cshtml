
@{
    ViewBag.Title = "T14047";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Apps/Inventory/Transaction/T14047Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>
<div class="" ng-app="Glorious" ng-controller="T14047Controller">
    @*header*@
    <div ng-show="loading" class="loder"><img src="~/Images/working1.gif" style="height: 50px;"></div>
    <div class="header">
        <span href="#default" class="logo">Receive Summary</span>
        <div class="header-right">           
            <a><span title="Clear" ng-click="Clear_Click()" class="glyphicon glyphicon-erase"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>           
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 70%;">
            <tr>
                <td style=" width: 10%;">
                    <label class="textlevel">From Date</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="date" ng-model="obj.T14047.FROM_DATE" ng-change="date_click()" class="form-control" />
                </td>
                <td style=" width: 10%;">
                    <label class="textlevel">To Date</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="date" ng-model="obj.T14047.TO_DATE" ng-change="date_click()" class="form-control" />
                </td>
                <td style=" width: 10%;"> </td>
            </tr>
        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />
        <table class="inputTable center" style=" width: 70%;">
            <tr>
                <td style=" width: 20%;">
                    <label class="textlevel" style="text-align:left">Total: <span style="margin-left:15px">{{obj.TotalSummery}}</span></label>
                </td>
                <td style=" width: 80%;"> </td>
            </tr>
        </table>

        <table id="tblGrid" class="tTable center" style=" width: 70%;">
            <thead>
                <tr style="color: black;text-align: center;background: #afadad" class="summary-table-header">
                    <th style="width: 5%;font-size: 18px;">SL</th>
                    <th style="width: 10%;text-align: center;font-size: 18px;">Memo No</th>
                    <th style="width: 25%;font-size: 18px;">Company Name</th>
                    <th style="width: 10%;font-size: 18px;">Price</th>
                    <th style="width: 10%;font-size: 18px;">Pament</th>
                    <th style="width: 10%;font-size: 18px;">Due</th>
                    <th style="width: 10%;font-size: 18px;">User</th>
                    <th style="width: 10%;font-size: 18px;">Date</th>
                    <th style="width: 10%;font-size: 18px;">Verify</th>

                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="Z in obj.ReceiveSummeryList">
                    <td style="width: 5%">{{Z.SL}}</td>
                    <td style="width: 10%">{{Z.T_MEM_INV_NO}}</td>
                    <td style="width: 25%">{{Z.T_CUSTOMER_NAME}} </td>
                    <td style="width: 10%">{{Z.T_TOTAL}} </td>
                    <td style="width: 10%">{{Z.T_PAYMENT}}</td>
                    <td style="width: 10%">{{Z.T_DUE}}</td>
                    <td style="width: 10%">{{Z.T_USER_NAME}}</td>
                    <td style="width: 10%">{{Z.T_ENTRY_DATE}}</td>
                    <td style="width: 10%">{{Z.T_VERIFY_FLG}}</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>

