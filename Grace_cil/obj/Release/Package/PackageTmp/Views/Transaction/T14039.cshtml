
@{
    ViewBag.Title = "T14039";
}

<script src="~/Apps/Inventory/Transaction/T14039Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>
<div class="" ng-app="Glorious" ng-controller="T14039Controller">
    @*header*@
    <div ng-show="loading" style="position: absolute;padding-left: 48%; margin-top:60px"><img src="~/Images/working1.gif" style="height: 50px;"></div>
    <div class="header">
        <span href="#default" class="logo">Damage Product</span>
        <div class="header-right">
            <a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>
            @*<a><span title="Refresh" ng-click="Refresh_Click()" class="glyphicon glyphicon-refresh"></span></a>*@
            <a><span title="Clear" ng-click="Clear_Click()" class="glyphicon glyphicon-erase"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
            @*<a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>*@
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 70%;">
            <tr>
                <td style="width:10%">
                    <label id="lblCode" class="textlevel">Code</label>
                </td>
                <td style="width:10%">
                    <input id="txtCode" style="width: 98%;" type="text" ng-model="obj.T_PRODUCT_CODE" ng-change="ProductChange()" class="form-control" />
                </td>
                <td style="width:10%">
                    <label class="textlevel">Type</label>
                </td>
                <td style="width:10%">
                    <input style=" width: 98%;" type="text" ng-model="obj.T_TYPE_NAME" class="form-control" readonly/>
                </td>
                <td style="width:10%">
                    <label class="textlevel">Product Name</label>
                </td>
                <td style="width:10%">
                    <input style=" width: 98%;" type="text" ng-model="obj.T_PRODUCT_NAME" class="form-control" readonly/>
                </td>
                <td style="width:10%">
                    <label class="textlevel">Quantity</label>
                </td>
                <td style="width:10%">
                    <input style=" width: 98%;" type="text" ng-model="obj.T_QUANTITY" class="form-control" readonly/>
                </td>
            </tr>
        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />
        <table class="inputTable center" style=" width: 80%;">
            <tr>
                <td style=" width: 20%;">
                    <label class="textlevel" style="text-align:left">Total Damage: <span style="margin-left:15px">{{obj.TotalDamage}}</span></label>
                </td>
                <td style=" width: 80%; margin-right: 0; text-align: -webkit-right;">
                    <input class="form-control" id="myInput" type="text" placeholder="Search.." ng-model="Search">
                </td>
            </tr>
        </table>
        <table id="tblGrid" class="tTable center" style=" width: 80%; margin-top: 5px;">
            <thead>
                <tr style="color: black;text-align: center;background: #afadad" class="summary-table-header">
                    <th style="width: 10%;font-size: 18px;">Code</th>
                    <th style="width: 30%;font-size: 18px;">Product Name</th>                   
                    <th style="width: 20%;font-size: 18px;">Type</th>
                    <th style="width: 10%;font-size: 18px;">Pack Size</th>
                    <th style="width: 10%;font-size: 18px;">Quantity</th>
                    <th style="width: 20%;font-size: 18px;">Date</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="Z in obj.DamageList|filter:Search">
                    <td style="width: 10%;">{{Z.T_PRODUCT_CODE}}</td>
                    <td style="width: 30%; text-align: left;padding-left:10px">{{Z.T_PRODUCT_NAME}}</td>                    
                    <td style="width: 20%; text-align: left; padding-left: 10px">{{Z.T_TYPE_NAME}}</td>
                    <td style="width: 10%">{{Z.T_PACK_NAME}}</td>                    
                    <td style="width: 10%">{{Z.T_QUANTITY}}</td>
                    <td style="width: 20%">{{Z.T_ENTRY_DATE}}</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>
