
@{
    ViewBag.Title = "T14041";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table-scroll-header-fix tbody {
        display: block;
        min-height: 0vh !important;
         max-height: 65vh !important;
        overflow-x: auto;
    }
    ::-webkit-scrollbar {
        width: 0px;
    }
    .table-scroll-header-fix thead, tbody tr {
        display: table;
        width: 100%;
        table-layout: fixed;
    }

    .table-scroll-header-fix thead {
        width: calc( 100% - 0em )
    }

    .table-scroll-header-fix table {
        width: 100%;
    }
</style>
<script src="~/Apps/Inventory/Transaction/T14041Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>
<div class="" ng-app="Glorious" ng-controller="T14041Controller">
    @*header*@
    <div ng-show="loading" style="position: absolute;padding-left: 48%; margin-top:60px"><img src="~/Images/working1.gif" style="height: 50px;"></div>
    <div class="header">
        <span href="#default" class="logo">Sale Summary</span>
        <div class="header-right">
            @*<a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>*@
            <a><span title="Clear" ng-click="Clear_Click()" class="glyphicon glyphicon-erase"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
            @* <a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>*@
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 90%;">
            <tr>
                <td style=" width: 10%;">
                    <label class="textlevel">From Date</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="date" ng-model="obj.T14041.FROM_DATE" ng-change="date_click()" class="form-control" />
                </td>
                <td style=" width: 10%;">
                    <label class="textlevel">To Date</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="date" ng-model="obj.T14041.TO_DATE" ng-change="date_click()" class="form-control" />
                </td>
                <td style=" width: 10%;"> </td>
            </tr>
        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />
        <table class="inputTable center" style=" width: 90%;">
            <tr>
                <td style=" width: 20%;">
                    <label class="textlevel" style="text-align:left">Total Sale: <span style="margin-left:15px">{{obj.TotalSummery}}</span></label>
                </td>
                <td style=" width: 80%;"> </td>
            </tr>
        </table>
        <div class="table-scroll-header-fix">
            <table id="tblGrid" class="tTable center" style=" width: 100%;">
                <thead>
                    <tr style="color: black;text-align: center;background: #afadad" class="summary-table-header">
                        <th style="width: 3%;font-size: 18px;">SL</th>
                        <th style="width: 10%;text-align: center;font-size: 18px;">Memo No</th>
                        <th style="width: 15%;font-size: 18px;">Customer Name</th>
                        <th style="width: 7%;font-size: 18px;">Qut</th>
                        <th style="width: 8%;font-size: 18px;">Total Sale</th>
                        <th style="width: 7%;font-size: 18px;">Pament</th>
                        <th style="width: 8%;font-size: 18px;">Due</th>
                        <th style="width: 13%;font-size: 18px;">User</th>
                        <th style="width: 10%;font-size: 18px;">Date</th>
                        <th style="width: 7%;font-size: 18px;">Verify</th>
                        <th style="width: 7%;font-size: 18px;">Status</th>
                        <th style="width: 5%;">Inv</th>
                        <th style="width: 5%;">Cha</th>

                    </tr>
                </thead>
                <tbody id="tbody">
                    <tr ng-repeat="Z in obj.SaleSummeryList">
                        <td style="width: 3%">{{Z.SL}}</td>
                        <td style="width: 10%">{{Z.T_MEMO_NO}}</td>
                        <td style="width: 15%">{{Z.T_CUSTOMER_NAME}} </td>
                        <td style="width: 7%">{{Z.T_SALE_TOTAL}} </td>
                        <td style="width: 8%">{{Z.T_GRAND_TOTAL}} </td>
                        <td style="width: 7%">{{Z.T_PAMENT}}</td>
                        <td style="width: 8%">{{Z.T_DUE}}</td>
                        <td style="width: 13%">{{Z.T_EMP_NAME}}</td>
                        <td style="width: 10%">{{Z.T_ENTRY_DATE}}</td>
                        <td style="width: 7%">{{Z.T_VERIFY_FLG}}</td>
                        <td style="width: 7%" ng-style="Z.T_PRE_ORDER === '1' && {'background-color':'yellow'} ">{{Z.T_ORDER_STATUS}}</td>
                        <td style="width: 5%;">
                            <input type="checkbox" ng-model="Z.T_PNT_VCHR_FLG" ng-true-value="'1'" ng-false-value="'0'" ng-click="Pnt_Vchr_Click($index,Z)" />
                        </td>
                        <td style="width: 5%;">
                            <input type="checkbox" ng-model="Z.T_PNT_CHALAN_FLG" ng-true-value="'1'" ng-false-value="'0'" ng-click="Pnt_Chalan_Click($index,Z)" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
    </div>

</div>

