@{
    ViewBag.Title = "T14005";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Apps/Inventory/Setup/T14005Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>

<style>
    .selected {
        background-color: #80c8e4ba;
        /* color: white;*/
        font-weight: bold;
    }
</style>
<div class="" ng-app="Petgallery" ng-controller="T14005Controller">
    @*header*@
    <div ng-show="loading" class="loder"><img src="~/Images/working1.gif" style="height: 50px;"></div>
    <div class="header">
        <span href="#default" class="logo">Price Setup</span>
        <div class="header-right">
            <a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>
            <a><span title="Clear" ng-click="Clear_Click()" class="glyphicon glyphicon-erase"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
            <a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 60%;">
            <tr>
                <td style=" width: 10%;">
                    <label class="textlevel">Code</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input type="text" ng-model="obj.T14005.T_PRICE_CODE" class="form-control" readonly />
                </td>
                <td style=" width: 15%;">
                    <label class="textlevel">Pro Name</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <select id="ddlProduct" class="form-control" placeholder="Select one" tabindex="1"
                            ng-model="obj.ddlProduct"
                            ng-change="Product_Click()"
                            ng-options="V.T_PRODUCT_NAME for V in obj.ProductList track by V.T_PRODUCT_CODE">
                        <option value="">Select One</option>
                    </select>
                </td>
                <td style=" width: 15%;">
                    <label class="textlevel">Pack Size</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <select id="ddlPack" class="form-control" placeholder="Select one" tabindex="1"
                            ng-model="obj.ddlPack"
                            ng-options="V.T_PACK_NAME for V in obj.PackList track by V.T_PACK_CODE">
                        <option value="">Select One</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td style=" width: 10%;">
                    <label class="textlevel">Pur Price</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input id="txtPurchasePrice" type="number" ng-model="obj.T14005.T_PURCHASE_PRICE" class="form-control" />
                </td>
                <td style=" width: 15%;">
                    <label class="textlevel">Hole S.Price</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input id="txtHoleSalePrice" type="number" ng-model="obj.T14005.T_HOLE_SALE_PRICE" class="form-control" />
                </td>
                <td style=" width: 15%;">
                    <label class="textlevel">Retail S.Price</label>
                </td>
                <td style="width: 20%; text-align: left; ">
                    <input id="txtRetailSalePrice" type="number" ng-model="obj.T14005.T_RETAIL_SALE_PRICE" class="form-control" />
                </td>
            </tr>
        </table>
        <hr style="margin-top: 5px !important; margin-bottom: 5px !important; border-top: 2px solid #076c93b0; " />
        <div style="width: 70%;margin:auto">
            <table class="inputTable center" style=" width: 100%;">
                <tr><td style="text-align: -webkit-right;"> <input type="text" style="width:200px" ng-model="Search" placeholder="Search....." class="form-control" /></td></tr>
            </table>
            <table id="tblGrid" class="tTable center" style=" width: 100%;">
                <thead>
                    <tr style="color: black;background: #afadad" class="summary-table-header">
                        <th style="width: 15%;">Code</th>
                        <th style="width: 20%;">Product Name</th>
                        <th style="width: 20%;">Pack Name</th>
                        <th style="width: 15%;">Pur Price</th>
                        <th style="width: 15%;">Hole S.Price</th>
                        <th style="width: 15%;">Retail S.Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr dir-paginate="Z in obj.griDataList|filter:Search|itemsPerPage:10" $index pagination-id="details" ng-class="{'selected':$index == selectedRow}" ng-click="setProductRow($index,Z)" style="cursor:pointer">
                        <td style="width: 15%;">{{Z.T_PRICE_CODE}}</td>
                        <td style="width: 20%; text-align: left; padding-left: 10px;">{{Z.T_PRODUCT_NAME}}</td>
                        <td style="width: 20%; text-align: left; padding-left: 10px;">{{Z.T_PACK_NAME}}</td>
                        <td style="width: 15%;">{{Z.T_PURCHASE_PRICE}}</td>
                        <td style="width: 15%;">{{Z.T_HOLE_SALE_PRICE}}</td>
                        <td style="width: 15%;">{{Z.T_RETAIL_SALE_PRICE}}</td>

                    </tr>
                </tbody>
            </table>
            <dir-pagination-controls pagination-id="details" max-size="5"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>

        </div>
    </div>

</div>
