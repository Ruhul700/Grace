
@{
    ViewBag.Title = "T18021";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Apps/Inventory/Transaction/T18021Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>
<div class="" ng-app="Glorious" ng-controller="T18021Controller">
    @*header*@
    <div ng-show="loading" class="loder"><img src="~/Images/working1.gif" style="height: 50px;"></div>
    <div class="header">
        <span href="#default" class="logo">Client Summery</span>
        <div class="header-right">
            <a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>
            <a><span title="Clear" ng-click="Clear_Click()" class="glyphicon glyphicon-erase"></span></a>
            <a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
            @*  <a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>*@
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 100%;">
            <tr><td style="text-align: -webkit-right;"> <input type="text" style="width:200px" ng-model="Search" placeholder="Search....." class="form-control" /></td></tr>
        </table>
        <table id="tblGrid" class="tTable center" style=" width: 100%;">
            <thead>
                <tr style="color: black;background: #afadad" class="summary-table-header">
                    <th style="width: 3%;">ID</th>
                    <th style="width: 10%;">Client Name</th>
                    <th style="width: 10%;">Mobile</th>
                    <th style="width: 10%;">Address</th>
                    <th style="width: 10%;">Entry User</th>
                    <th style="width: 10%;">Entry Date</th>
                    <th style="width: 30%;">Last Chat</th>
                    <th style="width: 10%;">Chat Date</th>
                    <th style="width: 7%;">Chat Time</th>
                </tr>
            </thead>
            <tbody>
                <tr dir-paginate="Z in obj.GridDataList|filter:Search|itemsPerPage:10" $index pagination-id="details" ng-class="{'selected':$index == selectedRow}" ng-click="selectedtRow($index,Z)" style="cursor:pointer">
                    <td style="width: 3%;">{{Z.T_CHAT_CLIENT_ID}}</td>
                    <td style="width: 10%; text-align: left; padding-left: 10px;">{{Z.T_CHAT_CLIENT_NAME}}</td>
                    <td style="width: 10%; text-align: left; padding-left: 10px;">{{Z.T_CHAT_CLIENT_MOBILE}}</td>
                    <td style="width: 10%; text-align: left; padding-left: 10px;">{{Z.T_CHAT_CLIENT_ADDRESS}}</td>
                    <td style="width: 10%; text-align: left; padding-left: 10px;">{{Z.T_ENTRY_DATE}}</td>
                    <td style="width: 10%; text-align: left; padding-left: 10px;">{{Z.T_ENTRY_DATE}}</td>
                    <td style="width: 30%; text-align: left; padding-left: 10px;">{{Z.LAST_CHAT}}</td>
                    <td style="width: 10%; text-align: left; padding-left: 10px;">{{Z.T_CHAT_DATE}}</td>
                    <td style="width: 7%; text-align: left; padding-left: 10px;">{{Z.T_CHAT_TIME}}</td>

                </tr>
            </tbody>
        </table>
        <dir-pagination-controls pagination-id="details" max-size="5"
                                 direction-links="true"
                                 boundary-links="true">
        </dir-pagination-controls>

    </div>
    @*ChatList modal start*@
    <div id="ChatList" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-head">
                <span class="closemodal" ng-click="closeModal('ChatList')">&times;</span>
                <h5>Customer List</h5>
            </div>
            <div class="modal-body">
                <table>
                    <tr>
                        <td style="text-align: -webkit-right;">
                            <input type="text" style="width:200px" ng-model="Search" placeholder="Search....." class="form-control" />
                        </td>
                    </tr>
                </table>
                <table id="tblPopup" class="popupTable">
                    <tr>
                        <th style="width:10%">Date</th>
                        <th style="width:10%">Time</th>
                        <th style="width:80%">Chat</th>
                    </tr>
                    <tbody id="tboodPopup">
                        <tr dir-paginate="X in obj.ChatList|filter:Search|itemsPerPage:15" $index pagination-id="dataList" ng-class="{'selected':$index == MemoNoRow}" ng-click="setCustomerRow($index,X)" style="cursor:pointer">
                            <td style="width:10%">{{X.T_CHAT_DATE}}</td>
                            <td style="width:10%">{{X.T_CHAT_TIME}}</td>
                            <td style="width:80%;text-align:left">{{X.LAST_CHAT}}</td>
                        </tr>
                    </tbody>
                </table>
                <dir-pagination-controls pagination-id="dataList" max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </div>
        </div>
    </div>
    @*ChatList modal end*@
</div>