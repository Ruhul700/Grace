
@{
    ViewBag.Title = "T14045";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table-scroll-header-fix tbody {
        display: block;
        min-height: 0vh !important;
        max-height: 70vh !important;
        overflow-x: auto;
    }

    ::-webkit-scrollbar {
        width: 0px;
    }

    .table-scroll-header-fix thead, tbody tr {
        display: table;
        width: 100%;
        table-layout: fixed;
    }

    .table-scroll-header-fix thead {
        width: calc( 100% - 0em )
    }

    .table-scroll-header-fix table {
        width: 100%;
    }
</style>
<script src="~/Apps/Inventory/Transaction/T14045Controller.js"></script>
<script src="~/Apps/Service/Service.js"></script>
<div class="" ng-app="Glorious" ng-controller="T14045Controller">
    @*header*@
    <div ng-show="loading" class="loder"><img src="~/Images/working1.gif" style="height: 50px;"></div>
    <div class="header">
        <span href="#default" class="logo">Receive</span>
        <div class="header-right">
            <a><span title="Save" ng-click="Save_Click()" class="glyphicon glyphicon-floppy-disk"></span></a>
            <a><span title="Clear" ng-click="Clear_Click()" class="glyphicon glyphicon-erase"></span></a>
            @*<a><span title="Print" ng-click="Print_Click()" class="glyphicon glyphicon-print"></span></a>
                <a><span title="Delete" ng-click="Delet_Click()" class="glyphicon glyphicon-trash"></span></a>*@
        </div>
    </div>
    @*===========*@
    <div style="margin-left:0px; margin-top:10px" class="row col-lg-12 col-md-12 col-sm-12">
        <table class="inputTable center" style=" width: 90%;">
            <tr>
                <td style=" width: 20%;">
                    <label class="textlevel" style="text-align:left">Total Receive: <span style="margin-left:15px">{{obj.TotalValue}}</span></label>
                </td>               
                <td style=" width: 20%; margin-right: 0; text-align: -webkit-right;">
                    <input class="form-control" id="myInput" type="text" placeholder="Search.." ng-model="search">
                </td>
            </tr>
        </table>
        <div class="table-scroll-header-fix">
            <table id="tblGrid" class="tTable center" style=" width: 90%;">
                <thead>
                    <tr style="color: black;text-align: center;background: #afadad" class="summary-table-header">
                        <th style="width: 10%;font-size: 18px;">Memo No</th>
                        <th style="width: 15%;font-size: 18px;">Company Name</th>
                        <th style="width: 10%;font-size: 18px;">Type Name</th>
                        <th style="width: 10%;font-size: 18px;">Date</th>
                        <th style="width: 10%;font-size: 18px;">Total Price</th>
                        <th style="width: 10%;font-size: 18px;">Discount</th>
                        <th style="width: 10%;font-size: 18px;">Paid</th>
                        <th style="width: 10%;font-size: 18px;">Due</th>
                        <th style="width: 10%;font-size: 18px;">Pay</th>
                        <th style="width: 5%;font-size: 18px;"></th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    <tr ng-repeat="Z in obj.SaleReceivetList|filter:search">
                        <td style="width: 10%">{{Z.T_MEMO_NO}}</td>
                        <td style="width: 15%">{{Z.T_CUSTOMER_NAME}}</td>
                        <td style="width: 10%">{{Z.T_TYPE_NAME}}</td>
                        <td style="width: 10%">{{Z.T_ENTRY_DATE}}</td>
                        <td style="width: 10%">{{Z.T_TOTAL_PRICE}}</td>
                        <td style="width: 10%">{{Z.T_DISCOUNT}}</td>
                        <td style="width: 10%">{{Z.T_CASH}}</td>
                        <td style="width: 10%">{{Z.T_DUE}}</td>
                        <td style="width: 10%">
                            <input id="txtName" type="number" ng-model="Z.T_PAYMENT" ng-keyup="Payment_Click($index,Z)" class="form-control" />
                        </td>
                        <td style="width: 5%">
                            <input type="checkbox" ng-model="Z.T_ACTIVE_FLAG" ng-true-value="'1'" ng-click="SingleChk_Click($index,Z)" ng-false-value="'0'" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
    </div>

</div>

